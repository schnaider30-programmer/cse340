<% if (title) { %>
    <h1 class="formH1">
        <%= title %>
    </h1>
<% } else { %>
    <h1 class="formH1">Update Account</h1>
<% } %>

<%- messages() %>
<% if(errors) { %>
    <ul class="notice error">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
        <% }) %>
    </ul>
<% } %>

<div class="form-container">
    <h2>Edit your information</h2>
    <form id="updateForm" action="/account/update" method="post">
        <label for="accountFname">First name:</label>
        <input type="text" name="account_firstname" id="accountFname" value="<%= accountData.account_firstname %>" required>

        <label for="accountLname">Last name:</label>
        <input type="text" name="account_lastname" id="accountLname" value="<%= accountData.account_lastname %>" required>

        <label for="accountEmail">Email address:</label>
        <input type="email" name="account_email" id="accountEmail" value="<%= accountData.account_email %>" required>

        <button type="submit" id="submitBtn">Update My Account</button>

        <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
    </form>
</div>

<div class="form-container">
    <h2>Change your password</h2>
    <form action="/account/update-password" method="post" id="updateForm">
        <p>Passwords must be minimun 12 characters and include 1 capital letter, 1 number and 1 special character</p>
        <p>Note: Your original password will change</p>
        <label for="accountPassword">Password</label>
        <input type="password" name="account_password" id="accountPassword"
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>

        <button type="submit" id="submitBtn">Update My Password</button>

        <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
    </form>
</div>

