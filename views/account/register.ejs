<% if (title) { %>
    <h1 class="formH1"><%= title %></h1>
<% } else { %>
    <h1 class="formH1">Login</h1>
<% } %>

<%- messages() %>
<% if(errors) { %>
    <ul class="notice error">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
     <%   }) %>
    </ul>
<% } %>

<div class="registration-box">
    <p>All input fields are required</p>
    <form id="registerForm" action="/account/register" method="post">
     <label for="accountFname">First name:</label>   
     <input type="text" name="account_firstname" id="accountFname" value="<%= locals.account_firstname %>" required>

     <label for="accountLname">Last name:</label>
     <input type="text" name="account_lastname" id="accountLname" value="<%= locals.account_lastname %>" required>

     <label for="accountEmail">Email address:</label>
     <input type="email" name="account_email" id="accountEmail" value="<%= locals.account_email %>" required>

     <label for="accountPassword">Password</label>
     <input type="password" name="account_password" id="accountPassword" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
     <p><em>Passwords must be minimun 12 characters and include 1 capital letter, 1 number and 1 special character.</em></p>
     

     <button type="submit" id="submitBtn">register</button>
    </form>
</div>