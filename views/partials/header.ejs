<header id="top-header"> 
    <div class="site-id">
        <img src="/images/site/icon.png" alt="">
        <span class="siteName">
            <a href="/" title="Return to Home page">CSE Motors</a>
        </span>
    </div>
    
    <div id="tools">
        <% if (locals.loggedin) { %>
            <a href="/account/" title="Click to go to management view">Welcome <%= locals.accountData.account_firstname %></a>
            <a href="/account/logout" title="Click to logout">Logout</a>
        <% } else { %>
            <a href="/account/login" title="Click to log in">My account</a>    
        <% } %>
    </div>
    <button type="button" id="hamburger-btn"></button>
</header>
<hr>